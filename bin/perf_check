#!/usr/bin/env ruby

require 'perf_check'

app_root =
  begin
    dir = Dir.pwd
    until dir == '/' || File.exist?("#{dir}/config/application.rb")
      dir = File.dirname(dir)
    end

    unless File.exist?("#{dir}/config/application.rb")
      abort("perf_check should be run from a rails directory")
    end

    dir
  end

def perf_check_server_processes
  `ps axuww`.split(/\n/).grep(/perf_check/).join('\n')
end

if File.exists?("#{app_root}/tmp/pids/server.pid")
  $stderr.puts "It looks like a rails server is already running. Shut it down or remove the pid in tmp/pids/server.pid before continuing with perf_check."
  $stderr.puts perf_check_server_processes
  abort("Aborting!")
end

perf_check = PerfCheck.new(app_root).tap(&:load_config)
perf_check.parse_arguments(ARGV)

if perf_check.test_cases.empty?
  abort(perf_check.option_parser.help)
end

perf_check.run

if perf_check.options.compare_paths?
  perf_check.print_results_of_compared_paths
elsif perf_check.options.brief
  perf_check.print_brief_results
else
  perf_check.print_full_results
end

#            _______________________
#           < You made it faster!!! >
#            -----------------------
#           o                             .       .
#            o                           / `.   .' "
#             o                  .---.  <    > <    >  .---.
#              O                 |    \  \ - ~ ~ - /  /    |
#                    _____          ..-~             ~-..-~
#                   |     |   \~~~\.'                    `./~~~/
#                  =========   \__/    R U B Y T U N E     \__/
#                 .'  O    \     /               /       \  "
#                (_____,    `._.'               |         }  \/~~~/
#                 `----.          /       }     |        /    \__/
#                       `-.      |       /      |       /      `. ,~~|
#                           ~-.__|      /_ - ~ ^|      /- _      `..-'
#                                |     /        |     /     ~-.     `-. _  _  _
